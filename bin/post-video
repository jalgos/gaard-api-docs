#!/bin/bash

# Usage
# > bin/post-video [video_path] [analyse_id] [metadata_path]

# Examples
# > bin/post-video
# > bin/post-video bin/video.mov
# > bin/post-video bin/video.mov 1254448
# > bin/post-video bin/video.mov 1254448 bin/metadata.json

API_SERVER=${API_SERVER:="https://vision.ukpik.ai/v1"}
VIDEO=${1:-"bin/video.mov"}
ANALYSE_ID=$2
METADATA=${3:-"bin/metadata.json"}

if [[ -z "${API_KEY}" ]]; then
  echo "API_KEY is not set. Use export API_KEY=... or .envrc to provide it"
  exit 1
fi

ENDPOINT="$API_SERVER/classify?analyse_id=$ANALYSE_ID"

curl -X POST \
-H "Authorization: Bearer $API_KEY" \
-F "video=@$VIDEO" \
-F "metadata=@$METADATA" \
-H "accept: application/json" \
"$ENDPOINT"